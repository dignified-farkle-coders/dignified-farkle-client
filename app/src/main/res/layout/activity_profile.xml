<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <TextView
    android:id="@+id/user_name_text"
    android:text="User Name"
    android:textSize="24sp"
    android:padding="30dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

  <TextView
    android:id="@+id/display_points"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Points: 10,050 B"
    android:textSize="16sp"
    android:padding="30dp"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="184dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toBottomOf="@id/user_name_text"/>

  <TextView
    android:id="@+id/win_lose_ratio"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Win Ratio: 0.363%"
    android:padding="30dp"
    android:textSize="16sp"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="184dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toBottomOf="@id/display_points"/>

  <TextView
    android:id="@+id/largest_point"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Largest Single Point: 3550"
    android:textColor="@color/textColors"
    android:textSize="16sp"
    android:padding="30dp"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="184dp"
    app:layout_constraintTop_toBottomOf="@id/win_lose_ratio"
    app:layout_constraintLeft_toLeftOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>