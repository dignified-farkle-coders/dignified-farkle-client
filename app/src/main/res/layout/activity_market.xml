<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:paddingLeft="60dp"
  android:background="@drawable/main_background"
  android:layout_height="match_parent">

  <Button
    android:id="@+id/profile_button"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:drawableBottom="@drawable/ic_profile"
    android:layout_marginRight="70dp"
    android:layout_marginTop="20dp"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    />

  <TextView
    android:id="@+id/victory_points"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="0"
    android:textSize="34dp"
    app:layout_constraintTop_toBottomOf="@id/profile_button"
    app:layout_constraintLeft_toLeftOf="@id/profile_button"
    app:layout_constraintRight_toRightOf="@id/profile_button"/>

  <EditText
    android:id="@+id/die_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Dice 1"
    android:textSize="24dp"
    android:textStyle="bold"
    app:layout_constraintBottom_toTopOf="@id/die_1"
    app:layout_constraintLeft_toLeftOf="@id/die_1"
    app:layout_constraintRight_toRightOf="@id/die_1"/>

  <ImageView
    android:id="@+id/scroll_up"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:src="@drawable/ic_up"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="@id/die_1"
    app:layout_constraintRight_toRightOf="@id/die_1"/>

  <ImageView
    android:id="@+id/scroll_down"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:src="@drawable/ic_down"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="@id/die_1"
    app:layout_constraintRight_toRightOf="@id/die_1"/>

  <ImageView
    android:id="@+id/die_1"
    android:src="@drawable/generic_1"
    android:layout_width="150dp"
    android:layout_height="150dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    />

  <ImageView
    android:id="@+id/die_presentation_1"
    android:src="@drawable/generic_1"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_marginRight="10dp"
    app:layout_constraintRight_toLeftOf="@id/die_presentation_2"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    />

  <ImageView
    android:id="@+id/die_presentation_2"
    android:src="@drawable/generic_1"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_marginRight="10dp"
    app:layout_constraintLeft_toLeftOf="@id/buy_button"
    app:layout_constraintRight_toRightOf="@id/buy_button"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    />

  <ImageView
    android:id="@+id/die_presentation_3"
    android:src="@drawable/generic_1"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_marginLeft="10dp"
    app:layout_constraintLeft_toRightOf="@id/die_presentation_2"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    />

  <ImageView
    android:id="@+id/die_presentation_4"
    android:src="@drawable/generic_1"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_marginLeft="10dp"
    app:layout_constraintLeft_toRightOf="@id/die_presentation_3"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    />

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="200"
    android:textSize="24dp"
    android:textStyle="bold"
    android:textColor="#000"
    app:layout_constraintBottom_toTopOf="@id/die_presentation_1"
    app:layout_constraintLeft_toLeftOf="@id/die_presentation_1"
    app:layout_constraintRight_toRightOf="@id/die_presentation_1"/>

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="200"
    android:textSize="24dp"
    android:textStyle="bold"
    android:textColor="#000"
    app:layout_constraintBottom_toTopOf="@id/die_presentation_2"
    app:layout_constraintLeft_toLeftOf="@id/die_presentation_2"
    app:layout_constraintRight_toRightOf="@id/die_presentation_2"/>

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="200"
    android:textSize="24dp"
    android:textStyle="bold"
    android:textColor="#000"
    app:layout_constraintBottom_toTopOf="@id/die_presentation_3"
    app:layout_constraintLeft_toLeftOf="@id/die_presentation_3"
    app:layout_constraintRight_toRightOf="@id/die_presentation_3"/>

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="200"
    android:textSize="24dp"
    android:textStyle="bold"
    android:textColor="#000"
    app:layout_constraintBottom_toTopOf="@id/die_presentation_4"
    app:layout_constraintLeft_toLeftOf="@id/die_presentation_4"
    app:layout_constraintRight_toRightOf="@id/die_presentation_4"/>

  <TextView
    android:id="@+id/market_header"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/market"
    android:layout_marginTop="20dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    style="@style/Headers"/>

  <TextView
    android:id="@+id/points"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:textColor="#FF0"/>

  <Button
    android:id="@+id/buy_button"
    android:layout_width="130dp"
    android:layout_height="60dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:text="Buy"
    android:layout_marginBottom="30dp"
    android:textStyle="italic"
    />

</androidx.constraintlayout.widget.ConstraintLayout>