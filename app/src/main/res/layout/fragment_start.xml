<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/constraintLayout"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:padding="20dp"
  tools:context=".StartFragment">

  <ImageView
    android:id="@+id/market_dice"
    android:src="@drawable/market_dice"
    android:layout_width="150dp"
    android:layout_height="150dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginRight="200dp"/>

  <TextView
    android:id="@+id/victory_points"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="0"
    android:textSize="34dp"
    app:layout_constraintTop_toBottomOf="@id/profile_button"
    app:layout_constraintLeft_toLeftOf="@id/profile_button"
    app:layout_constraintRight_toRightOf="@id/profile_button"/>

  <TextView
    android:id="@+id/bonus"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="+1000"
    android:textSize="34dp"
    android:textColor="@color/rewared"
    android:textStyle="bold"
    app:layout_constraintBottom_toBottomOf="@id/market_dice"
    app:layout_constraintTop_toTopOf="@id/market_dice"
    app:layout_constraintLeft_toLeftOf="@id/market_dice"
    app:layout_constraintRight_toRightOf="@id/market_dice"/>

  <TextView
    android:id="@+id/reward"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Reward"
    android:textSize="34dp"
    android:textColor="@color/rewared"
    android:textStyle="bold"
    app:layout_constraintBottom_toTopOf="@id/market_dice"
    app:layout_constraintLeft_toLeftOf="@id/market_dice"
    app:layout_constraintRight_toRightOf="@id/market_dice"/>

  <TextView
    android:id="@+id/claim"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Claim"
    android:textSize="34dp"
    android:textColor="@color/rewared"
    android:textStyle="bold"
    app:layout_constraintBottom_toTopOf="@id/reward"
    app:layout_constraintLeft_toLeftOf="@id/market_dice"
    app:layout_constraintRight_toRightOf="@id/market_dice"/>

  <Button
    android:id="@+id/profile_button"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:drawableBottom="@drawable/ic_profile"
    android:layout_marginRight="50dp"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    />

  <TextView
    android:id="@+id/section_label"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp"
    android:text="@string/farkle"
    android:textColor="@color/textColors"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    style="@style/Headers"
    />

  <Button
    android:id="@+id/find_game"
    android:layout_width="130dp"
    android:layout_height="60dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toTopOf="@id/market"
    android:text="Find Game"
    android:textStyle="italic"
    />

  <Button
    android:id="@+id/market"
    android:layout_width="130dp"
    android:layout_height="60dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:text="Market"
    android:textStyle="italic"
    />

  <Spinner
    android:id="@+id/spinner"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:hint="Select Game"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>